<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DM1.MessagePage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Editor x:Name="MessageText"
                    Placeholder="Enter your message"
                    Text="{Binding Text}"
                    HeightRequest="140" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="Compose"
                    Clicked="OnComposeButtonClicked" />
                <Button Grid.Column="1"
                    Text="Retrieve"
                    Clicked="OnRetrieveButtonClicked"/>
                <Button Grid.Column="2"
                    Text="Clear"
                    Clicked="OnClearButtonClicked"/>
               <Entry x:Name="idEntry" Grid.Row="2" Grid.Column="0"
               Text="" 
               Completed="Entry_Completed"
               IsEnabled="False" />
               <Button x:Name="SendButton" Text="Send" Grid.Row="3" Grid.Column="0"
                    Clicked="OnSendButtonClicked"
                       IsEnabled="False"/>
            </Grid>
            
        </StackLayout>

    </ContentPage.Content>
</ContentPage>